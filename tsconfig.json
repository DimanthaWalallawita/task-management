{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "react-jsx", // For React 17 and later
        "moduleResolution": "node",
        "module": "esnext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}